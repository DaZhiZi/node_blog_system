doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/font-awesome-4.7.0/css/font-awesome.min.css')
    script(type="text/javascript" src="/javascripts/lib/jquery-1.10.2.min.js")
    script(type="text/javascript" src="/javascripts/api.js")
    style.
      @keyframes expandWidth {
        0% {background:black; width: 0%;}
        100% {background:black; width: #{num}%;}
        /*100% {background:black; width: 100%;}*/
      }

    style.
      .bar {
        position: fixed;
        top: 0;
        left: -100%;
        width: 100%;
        height: 2px;
        transition: all 0.5s ease;
        background-color: black;
      }
    script.
      $(document).ready(function () {
        var n = 100 - Math.random() * 80;
        if (n > 40) {
          n = 40;
        }
        $(".bar").css('left', `-${n}%`);
      });

  body
    block content
